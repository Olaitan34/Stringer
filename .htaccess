# Sevalla Apache/Passenger Configuration for Django
# Replace 'username' with your actual Sevalla username

# Point to your Python virtual environment
PassengerPython /home/username/virtualenv/string_analyzer/3.9/bin/python3

# Set the application root directory
PassengerAppRoot /home/username/string_analyzer

# Enable Passenger
PassengerEnabled On

# Set the startup file
PassengerStartupFile passenger_wsgi.py

# Application environment (production/development)
PassengerAppEnv production

# Performance settings
PassengerMinInstances 1
PassengerMaxPoolSize 6
PassengerPoolIdleTime 0

# Error handling
PassengerFriendlyErrorPages off

# Restart the application (create/touch this file to restart)
PassengerRestartDir /home/username/string_analyzer

# Redirect all requests to passenger_wsgi.py
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ /passenger_wsgi.py/$1 [QSA,L]
